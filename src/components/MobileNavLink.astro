---
import type { propsToFilename } from 'astro/assets/utils';
import type { Code } from 'astro:components';

// Get the Current URL and the URl of the this Nav Link
const currentPath = Astro.url.pathname;
const { href, className, ...rest } = Astro.props;

// If they match highlight that one
const activelink = currentPath === href ? 'activelink' : '';
---

<a class={`mobile-nav__link`} href={href} {...rest}>
  <slot />
</a>

<style>
  .mobile-nav__link {
    /* Typography */
    font-size: var(--size-lg);
    font-weight: 600;
    color: white;
    letter-spacing: -0.05em;
    text-decoration: none;

    /* position */
    position: relative;
  }

  .mobile-nav__link::after {
    content: '';

    /* Box Model */
    width: 0%;
    height: 1px;

    /* Background */
    background-color: var(--clr-dutch-white);

    /* Position */
    position: absolute;
    bottom: 0;
    left: 0;

    /* Transition */
    transition-property: width;
    transition-duration: 0.3s;
    transition-timing-function: ease;
    transition-delay: 0.05s;
  }

  .mobile-nav__link:hover::after {
    width: 100%;
  }
</style>

