---
// Import Astro Icon Package
import { Icon } from 'astro-icon/components';
---

<section class="header__socials container section">
  <!-- Using an Icon from an Open-Source Icon set -->
  <a
    class="header__social-media"
    href="https://www.linkedin.com/in/fumeuvwie"
    target="_blank"
  >
    <Icon name="mdi:linkedin" size={25} />
  </a>
  <!-- Locally Sourced Icon from my `src/assets/icon` folder -->
  <a
    class="header__social-media"
    href="https://github.com/fumzy123"
    target="_blank"
  >
    <Icon name="github" size={25} />
  </a>
</section>

<style>
  .header__socials {
    margin-bottom: 5rem;
    /** Layout **/
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 2rem;
  }

  .header__social-media {
    color: white;
    text-decoration: none;
  }

  .header__social-media:hover {
    color: #f3dfbfff;
  }
</style>
