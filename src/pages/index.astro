<style>
  /* -------- Hero Section ------------ */
  .hero {
    /* Layout */
    display: flex;
    flex-direction: row;
    gap: 5rem;
  }

  .hero__name {
    /** Typography */
    color: #f3dfbfff;
    font-size: 4rem;
  }

  .hero__desc{
    text-align: justify;
  }

  .hero__b1{
    /* Box Model */
    width: 400px;
    height: 400px;
    border: 2px solid red;

    /* Background */
    background-color: #f3dfbfff;
  }

  .hero__b2{
    width: 400px;
    height: 200px;
    background-color: #8e4a49ff;
  }

  
