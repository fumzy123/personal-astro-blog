    font-size: 1.5rem;

    /* Box Model */
    margin: 1rem 0rem 1rem;
  }
  .hero__btn {
    /* Background */
    background: #f3dfbfff;

    /** Typography */
    color: #17181cff;
    font-weight: 700;

    /* Box Model */
    padding: 0.5rem;
    margin-top: 1rem;
    border-radius: 8px;
  }


  .hero__profile {
    margin: 3em;
  }



/* --------- Education Section------------- */
