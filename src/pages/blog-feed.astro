</BaseLayout>

<style>
  .section-title {
    margin-top: 2rem;

    /* font-size: var(--size-4xl); */
    font-family: 'Lusitana';
    font-size: var(--font-size-subtitle);
    color: var(--clr-dutch-white);
  }

  .blog-card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .blog-card-item {
    list-style: none;

    /* Box Model */
    border-radius: 10px;
    border: 2px solid var(--clr-slate600);

    /* Typography */
    text-decoration: none;
    color: white;
  }

  .blog-card-item-link {
    /* Typogrpahy */
    color: var(--clr-dutch-whtie);
    text-decoration: none;
  }

  .blog-card {
    padding: 1rem;
  }
  .blog-card-date {
    /* padding: 1rem; */
  }

  /* Image */
  .blog-image-container {
    /* This is an Image Wrapper that ensures the image maintains
    a particular aspect ratio.
     */
    aspect-ratio: 1 / 1;
  }

  .blog-image {
    border-radius: 10px;
    /* Image has a max-width and height to fill the parent div element */
    max-height: 100%;
    /* Zooms in-and-out to cover the entire width and height without stretching */
    object-fit: cover;
  }

  .blog-info {
    margin-top: 2rem;
  }

  .blog-title {
    margin-top: 0.5rem;
  }

