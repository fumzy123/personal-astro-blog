  /* sm */
  @media (min-width: 640px) {
    .blog-card-item {
      max-width: 480px;
    }

    .blog-card {
      display: flex;
      flex-direction: row;
      gap: 2rem;
    }
    .blog-image-container {
      flex: 1;
    }
    .blog-info {
      flex: 1;
    }
  }

